<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Izum" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="PacksTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- region Text -->

    <style name="Text.Header" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Text.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- region Text.Button -->

    <style name="Text.Toolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.Button.Medium" parent="Text.Button">
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <style name="Text.Button.Large" parent="Text.Button">
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <style name="Text.Button.White.Filled" parent="Text.Button.Large">
        <item name="android:textColor">@color/black_wet</item>
        <item name="android:drawableTint">@color/black_wet</item>
        <item name="android:background">@drawable/rect_filled_white_14</item>
    </style>

    <style name="Text.Button.White.Outline" parent="Text.Button.Large">
        <item name="android:drawableTint">@color/selector_text_white</item>
        <item name="android:textColor">@color/selector_text_white</item>
        <item name="android:background">@drawable/selector_shape_white_outline_14</item>
    </style>

    <style name="Text.Button.White.Free" parent="Text.Button.Large">
        <item name="android:drawableTint">@color/selector_text_white</item>
        <item name="android:textColor">@color/selector_text_white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Button.Subscribe" parent="Text.Button.Medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/selector_shape_subscribe_gradient_14</item>
        <item name="android:drawableStart">@drawable/ic_unlock_24</item>
    </style>

    <style name="Text.Button.Subscribed" parent="Text.Button.Medium">
        <item name="android:textColor">@color/subscribed</item>
        <item name="android:drawableTint">@color/subscribed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableStart">@drawable/ic_stars_24</item>
    </style>
    <!-- endregion -->

    <!-- endregion -->

</resources>