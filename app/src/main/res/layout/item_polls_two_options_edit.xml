<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingVertical="4dp">

    <LinearLayout
        android:id="@+id/vgContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rect_outline_edit_pack_item"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:textColor="@color/red"
            android:textStyle="bold"
            tools:text="Choose a career wich you want" />

        <TextView
            android:id="@+id/tvRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/blue"
            android:textStyle="bold"
            tools:text="Choose a career wich you want Choose a career wich you want Choose a career wich you want" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDelete"
        android:layout_width="40dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        android:src="@drawable/ic_edit_pack_item_unchecked" />

</LinearLayout>